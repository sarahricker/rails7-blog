<h1>My Blog </h1>
<% @blog_posts.each do |blog_post| %>
  <div>
    <div class="flex items-baseline space-x-4">
      <h2><%= link_to blog_post.title, blog_post %></h2>
      <% if blog_post.draft? %>
        <div class="irounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
          Draft
        </div>
      <% end %>
      <% if blog_post.scheduled? %>
        <div class="irounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
          Scheduled
        </div>
      <% end %>
    </div>
    <p><%= blog_post.body%></p>
  </div>
<% end %>
